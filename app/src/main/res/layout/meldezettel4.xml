<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.teresaneuhold.resifoandroid.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button6"
        android:layout_marginLeft="30dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:text="Anmeldung Unterkunft:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AnUn"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:textSize="20sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Straße:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Ad1"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Straße"
                android:ems="10"
                android:id="@+id/AdStrasse"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Hausnr.:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Ad2"
                android:layout_weight="0.35"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>

            <TextView
                android:text="Stiege:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Ad3"
                android:layout_weight="0.49"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>

            <TextView
                android:text="Tür:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Ad4"
                android:layout_weight="0.88"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/AdHausnr"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/AdStiege"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/AdTuer"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="PLZ:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Ad6"
                android:layout_weight="0.21"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>

            <TextView
                android:text="Ort:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Ad7"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/AdPLZ"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/AdOrt"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

        <TextView
            android:text="Hauptwohnsitz:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AdHW"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:text="Ja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioAd1"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>

            <RadioButton
                android:text="Nein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioAd2"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

        <TextView
            android:text="Zuzug aus dem Ausland:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AdAusland"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:text="Ja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioAd3"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>

            <RadioButton
                android:text="Nein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioAd4"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

        <TextView
            android:text="Name des Staates:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AdStaat"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/AdStaatN"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"/>

        <Button
            android:text="Auto Fillin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Auto"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"/>


    </LinearLayout>



    <Button
        android:text="1"
        android:id="@+id/button1"
        android:minWidth="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        />

    <Button
        android:text="2"
        android:id="@+id/button2"
        android:minWidth="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        />

    <Button
        android:text="3"
        android:id="@+id/button3"
        android:minWidth="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp" />

    <Button
        android:text="4"
        android:id="@+id/button4"
        android:minWidth="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/darker_gray"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white"/>

    <Button
        android:text="5"
        android:id="@+id/button5"
        android:minWidth="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp" />

    <Button
        android:text="6"
        android:id="@+id/button6"
        android:minWidth="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp" />

    <Button
        android:text="7"
        android:id="@+id/button7"
        android:minWidth="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="1dp" />



    <Button
        android:text="Hilfe"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonHilfe"
        android:textSize="12sp"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp" />


</RelativeLayout>
